alignment top_right
gap_x 10
gap_y 23

# Fork
background true

use_xft yes
xftfont Oswald:size=12:Light

own_window no
own_window_class Conky
own_window_type desktop
own_window_argb_visual yes
own_window_transparent yes
double_buffer yes
minimum_size 200 0
maximum_width 200

border_width 1
cpu_avg_samples 2
default_color 252525
default_outline_color white
default_shade_color 95d4e6
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no

# Substract file system buffers from memory
no_buffers yes

net_avg_samples 2
out_to_console no
out_to_stderr no
extra_newline no
stippled_borders 0
update_interval 1
use_spacer none
show_graph_scale no
show_graph_range no
pad_percents 2

TEXT
${alignr}${offset -7}${font Glyphs:size=14}${exec ~/.conky/get_light.sh}{$font}
#${ibm_temps 0}ºC IBM 0
#${ibm_temps 1}ºC IBM 1
#${ibm_temps 3}ºC IBM 3
#${ibm_temps 4}ºC IBM 4
#${ibm_temps 6}ºC IBM 6
#${hddtemp /dev/sda}ºC sda
#${acpitemp}ºC acpi
${font Glyphs:size=14}${exec ~/.conky/get_battery.sh}{$font}${offset -10}${voffset -2}${battery_bar BAT0}
${font Glyphs:size=14}j${font}${offset 12}${voffset -1}${execbar ~/.conky/get_brightness.sh }
${offset 3}${font Glyphs:size=14}b${font}${offset 14}${voffset -2}${execbar ~/.conky/get_volume.sh}
${font Oswald:size=12:Normal}root${font} ${alignr}${fs_used}/${fs_size /}
${fs_bar 6,200 /}
${font Oswald:size=12:Normal}home${font}${alignr}${fs_used /home}/${fs_size /home}
${fs_bar 6,200 /home}
#${diskiograph /dev/sda3 20,90} ${alignr}${diskiograph /dev/sda4 20,90}
${font Oswald:size=12}${wireless_essid wlan0}${font}${alignr}${addr wlan0}
${wireless_link_bar wlan0}
${downspeedgraph wlan0 -l}
${voffset -10}${totaldown wlan0}${alignr}${downspeed wlan0}
${upspeedgraph wlan0 -l}
${voffset -10}${totalup wlan0}${alignr}${upspeed wlan0}

